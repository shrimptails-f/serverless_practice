{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup",
            "type": "shell",
            "command": "task create-apigateway && task create-table && task aws-configure-setup"
        },
        {
            "label": "pip freeze",
            "type": "shell",
            "command": "pip freeze > requirements.txt"
        },
        {
            "label": "pip install for requirements.txt",
            "type": "shell",
            "command": "pip install -r requirements.txt"
        },
        {
            "label": "ローカル DynamoDB デプロイ",
            "type": "shell",
            "command": "task local-dynamodb-deploy"
        },
        {
            "label": "ローカル デプロイ",
            "type": "shell",
            "command": "task local-deploy"
        },
        {
            "label": "本番 DynamoDB デプロイ",
            "type": "shell",
            "command": "task production-dynamodb-deploy"
        },
        {
            "label": "本番 DynamoDB リソース削除",
            "type": "shell",
            "command": "task production-dynamodb-destroy"
        },
        {
            "label": "本番 デプロイ",
            "type": "shell",
            "command": "task production-deploy"
        },
        {
            "label": "本番 リソース削除",
            "type": "shell",
            "command": "task production-destroy"
        },
